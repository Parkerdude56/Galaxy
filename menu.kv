

<MenuWidget>:
    canvas.before:
        Color:
            rgba: 0, 0, 0, .8
        Rectangle:
            size: self.size

    #scores_widget: scores_widget




    Label:
        font_size: dp(60)
        font_name: 'fonts/Sackers-Gothic-Std-Light.ttf'
        text: root.parent.menu_title
        pos_hint: { "center_x": .5, "center_y": .6}
    Button:
        font_size: dp(30)
        font_name: 'fonts/Eurostile.ttf'
        text: root.parent.menu_button_title
        pos_hint: { "center_x": .5, "center_y": .3}
        size_hint: .2, .15
        on_press: root.parent.on_menu_button_pressed()
        background_normal: ''
        background_color: 1, .3, .4, .85

    Label:
        font_size: dp(25)
        font_name: 'fonts/Sackers-Gothic-Std-Light.ttf'
        text: 'High Scores'
        pos_hint: { "center_x": .17, "center_y": .45}
    Label:
        font_size: dp(20)
        font_name: 'fonts/Sackers-Gothic-Std-Light.ttf'
        text: root.parent.scoreList[0]
        pos_hint: { "center_x": .17, "center_y": .35}

    Label:
        font_size: dp(15)
        font_name: 'fonts/Sackers-Gothic-Std-Light.ttf'
        text: root.parent.scoreList[1]
        pos_hint: { "center_x": .17, "center_y": .3}
    Label:
        font_size: dp(15)
        font_name: 'fonts/Sackers-Gothic-Std-Light.ttf'
        text: root.parent.scoreList[2]
        pos_hint: { "center_x": .17, "center_y": .225}
    Label:
        font_size: dp(15)
        font_name: 'fonts/Sackers-Gothic-Std-Light.ttf'
        text: root.parent.scoreList[3]
        pos_hint: { "center_x": .17, "center_y": .15}
    Label:
        font_size: dp(15)
        font_name: 'fonts/Sackers-Gothic-Std-Light.ttf'
        text: root.parent.scoreList[4]
        pos_hint: { "center_x": .17, "center_y": .075}
    Label:
        font_size: dp(35)
        font_name: 'fonts/Sackers-Gothic-Std-Light.ttf'
        text: root.parent.winner
        pos_hint: { "center_x": .5, "center_y": .75}
    Label:
        font_size: dp(10)
        font_name: 'fonts/Sackers-Gothic-Std-Light.ttf'
        text: 'By Parker Joldersma'
        pos_hint: { "center_x": .9, "center_y": .05}


